#mou-modal{class: 'd-none'}
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %h3.modal-title
          = t('proper.mou.title')
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        %b= t('proper.mou.header')
        %br
        %br
        = t('proper.mou.p_1')
        %br
        %br
        %q= t('proper.mou.p_2')
        %br
        %br
        = t('proper.mou.p_3')
        %br
        %br
        %b= t(:proper)[:mou][:agree]
        %br
        By clicking
        %b Agree
        = t('proper.mou.agreement')
      .modal-footer
        .center-block
          = link_to t('proper.mou.yes_select'), confirmation_service_request_path(srid: service_request.id), class: 'btn btn-primary mou-yes-button'
